<?xml version="1.0"?>
<database
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    name="zed"
    defaultIdMethod="native"
    defaultPhpNamingMethod="underscore"
    xsi:noNamespaceSchemaLocation="http://static.spryker.com/schema-01.xsd"
    identifierQuoting="true"
    namespace="Orm\Zed\Klarna\Persistence"
    package="src.Orm.Zed.Klarna.Persistence"
>

    <table name="spy_payment_klarna" phpName="SpyPaymentKlarna">
        <column name="id_payment_klarna" type="INTEGER" autoIncrement="true" primaryKey="true"/>
        <column name="fk_sales_order" required="true" type="INTEGER"/>
        <column name="account_brand" required="true" type="VARCHAR"/>
        <column name="client_ip" required="true" type="VARCHAR"/>
        <column name="first_name" required="true" type="VARCHAR" size="100"/>
        <column name="last_name" required="true" type="VARCHAR" size="100"/>
        <column name="salutation" required="true" type="ENUM" valueSet="Mr, Mrs, Dr"/>
        <column name="gender" required="true" type="ENUM" valueSet="Male, Female"/>
        <column name="date_of_birth" type="DATE" default="NULL"/>
        <column name="country_iso2_code" required="true" type="CHAR" size="2"/>
        <column name="city" required="true" type="VARCHAR" size="255"/>
        <column name="street" required="true" type="VARCHAR" size="255"/>
        <column name="zip_code" required="true" type="VARCHAR" size="15"/>
        <column name="pno_number" type="VARCHAR" size="15"/>
        <column name="email" required="true" type="VARCHAR" size="255"/>
        <column name="phone" type="VARCHAR" size="255"/>
        <column name="cell_phone" type="VARCHAR" size="255"/>
        <column name="language_iso2_code" required="true" type="CHAR" size="2"/>
        <column name="currency_iso3_code" required="true" type="CHAR" size="3"/>
        <column name="pre_check_id" type="VARCHAR" size="255"/>
        <column name="invoice_id" type="VARCHAR" size="255" />
        <column name="installment_id" type="VARCHAR" size="30"/>
        <column name="pending_status" type="ENUM" valueSet="0, 1"/>
        <column name="status" type="ENUM" valueSet="0, 1, 2"/>
        <column name="shipping_invoice_id" type="VARCHAR" size="255"/>
        <foreign-key name="spy_payment_klarna-fk_sales_order" foreignTable="spy_sales_order" phpName="SpySalesOrder">
            <reference foreign="id_sales_order" local="fk_sales_order"/>
        </foreign-key>
        <behavior name="timestampable"/>
        <id-method-parameter value="spy_payment_klarna_pk_seq"/>
    </table>

    <table name="spy_payment_klarna_transaction_status_log">
        <column
            name="id_payment_klarna_transaction_status_log"
            type="INTEGER"
            primaryKey="true"
            autoIncrement="true"
        />
        <column name="fk_payment_klarna" required="true" type="INTEGER"/>
        <column name="processing_type" required="true" type="VARCHAR"/>
        <column name="processing_status" required="true" type="VARCHAR"/>
        <column name="processing_error_message" type="VARCHAR"/>
        <column name="processing_error_code" type="VARCHAR"/>
        <foreign-key name="spy_klarna_transaction_status_log-fk_klarna" foreignTable="spy_payment_klarna">
            <reference foreign="id_payment_klarna" local="fk_payment_klarna"/>
        </foreign-key>
        <behavior name="timestampable"/>
        <id-method-parameter value="spy_payment_klarna_transaction_status_log_pk_seq"/>
    </table>

    <table name="spy_payment_klarna_order_item">
        <column name="fk_payment_klarna" type="INTEGER" primaryKey="true"/>
        <column name="fk_sales_order_item" type="INTEGER" primaryKey="true"/>
        <column name="invoice_id" type="VARCHAR" size="255"/>
        <behavior name="timestampable">
            <parameter name="disable_updated_at" value="true"/>
        </behavior>
        <foreign-key name="spy_klarna_order_item-fk_klarna" foreignTable="spy_payment_klarna">
            <reference foreign="id_payment_klarna" local="fk_payment_klarna"/>
        </foreign-key>
        <foreign-key name="spy_payment_klarna_order_item-fk_sales_order_item" foreignTable="spy_sales_order_item">
            <reference foreign="id_sales_order_item" local="fk_sales_order_item"/>
        </foreign-key>
    </table>

</database>
